{% extends 'home.html.twig' %}

{% block containtFluid %}

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <!-- card-header -->
        <div class="card-header">
          <h3 class="card-title">Tableau des matieres premieres</h3>
          <div class="btn-group float-right">
              
              <a class="btn btn-block bg-gradient-primary" href="{{ path('add_matiere') }}">
                <i class="fas fa-plus"></i>
                Ajouter
              </a>
          </div>
        </div>
        <!-- /.card-header -->

        <!-- card-body -->
        <div class="card-body">
          
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Code matiere premiere</th>
                  <th>Nom matiere premiere</th>
                  <th>Nom magasin</th>
                  <th>Action</th>
                </tr>
              </thead>
              
                <tbody>
                  {% if matieres != null %}
                    {% for matiere in matieres %}
                      <tr>
                        <td>{{ matiere.code }}</td>
                        <td>{{ matiere.nom }}</td>
                        {% if matiere.magasinStock == null %}
                            <td>0 en stock</td>
                          {% else %}
                            <td>{{ matiere.magasinStock.nom }}</td>
                        {% endif %}
                        <td>
                          <a class="btn btn-info btn-sm" href="{{ path('modify_matiere', {'id': matiere.id}) }}">
                            <i class="fas fa-pencil-alt"></i>
                          </a>
                          <a class="btn btn-danger btn-sm" href="{{ path('delete_matiere', {'id': matiere.id}) }}">
                            <i class="fas fa-trash"></i>
                          </a>
                        </td>
                      </tr>
                    {% endfor %}
                  {% endif %}
                </tbody>
              
            </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <!-- card -->

{% endblock %}