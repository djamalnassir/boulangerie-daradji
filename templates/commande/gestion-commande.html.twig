{% extends 'home.html.twig' %}

{% block containtFluid %}

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <!-- card-header -->
        <div class="card-header">
          <h3 class="card-title">Tableau des commandes</h3>
        </div>
        <!-- /.card-header -->

        <!-- card-body -->
        <div class="card-body">
          
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Date</th>
                </tr>
              </thead>
              
                <tbody>
                  {% for commande in commandes %}
                    <tr>
                      <td>{{ commande.id }}</td>
                      <td>{{ commande.date|date('d-m-Y') }}</td>
                    </tr>
                  {% endfor %}
                </tbody>
              
            </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <!-- card -->

{% endblock %}
