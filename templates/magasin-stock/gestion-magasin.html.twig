{% extends 'home.html.twig' %}

{% block containtFluid %}

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <!-- card-header -->
        <div class="card-header">
          <h3 class="card-title">Tableau des magasins</h3>
          <div class="btn-group float-right">
              <button type="button" class="btn btn-block bg-gradient-primary" data-toggle="modal" data-target="#modalAjoutForm">
                <i class="fas fa-plus"></i>
                Ajouter
              </button>
          </div>
        </div>
        <!-- /.card-header -->

        <!-- card-body -->
        <div class="card-body">
          
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nom</th>
                  <th>Adresse</th>
                  <th>Action</th>
                </tr>
              </thead>
              
                <tbody>
                  {% for magasin in magasins %}
                    <tr>
                      <td>{{ magasin.id }}</td>
                      <td>{{ magasin.nom }}</td>
                      <td>{{ magasin.adresse }}</td>
                      <td>
                        <a class="btn btn-info btn-sm" href="{{ path('modify_magasin', {'id': magasin.id}) }}">
                          <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger btn-sm" href="{{ path('delete_magasin', {'id': magasin.id}) }}">
                          <i class="fas fa-trash"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              
            </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <!-- card -->

    <!-- Modal -->
    <div class="modal fade" id="modalAjoutForm" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header bg-primary">
            <h4 class="modal-title">Ajout d'un magasin</h4>
          </div>
          <div class="modal-body">
            
              {{ form_start(form) }}
                <div class="form-group">
                  {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                  {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
              {{ form_end(form) }}
            
          </div>
        </div>
      </div>
    </div>
    <!-- /.Modal -->

{% endblock %}
